<%= flash_messages %>

<h2>Jobs List</h2>
<div class="job-block">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

        <th class="col-md-2">Title</th>
        <th class="col-md-2">Creator</th>
        <th class="col-md-4">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>

          <td class="col-md-2"><%= job.title %></td>
          <td class="col-md-2"><%= job.user.try(:email) %></td>
          <td class="col-md-4">
            <%= link_to 'Show', job_path(job), class: "btn btn-info" %>
            <%= link_to 'Edit', edit_job_path(job), class: "btn  btn-warning" %>
            <%= link_to 'Destroy', job_path(job), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
